{
  "psychometrics": {
    "tas-20": {
      "id": "psychometrics:tas-20",
      "psychometric": "TAS-20",
      "description": "Toronto Alexithymia Scale",
      "meta": {
        "links": {
          "overview": "https://embraceasd.com/toronto-alexithymia-scale/"
        }
      },
      "options": ["Strongly Disagree", "Disagree", "Neither Agree nor Disagree", "Agree", "Strongly Agree"],
      "scales": {
        "standard": {
          "Strongly Disagree": 1,
          "Disagree": 2,
          "Neither Agree nor Disagree": 3,
          "Agree": 4,
          "Strongly Agree": 5
        },
        "inverted": {
          "Strongly Disagree": 5,
          "Disagree": 4,
          "Neither Agree nor Disagree": 3,
          "Agree": 2,
          "Strongly Agree": 1
        }
      },
      "subscales": {
        "difficulty-identifying-feelings": {
          "subscale": "Difficulty Identifying Feelings",
          "items": {"length": 5},
          "scaling": true
        },
        "difficulty-describing-feelings": {
          "subscale": "Difficulty Describing Feelings",
          "items": {"length": 7},
          "scaling": true
        },
        "externally-oriented-thinking": {
          "subscale": "Externally-Oriented Thinking",
          "items": {"length": 8},
          "scaling": true
        }
      },
      "items": [
        {
          "number": 1,
          "prompt": "I am often confused about what emotion I am feeling.",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 2,
          "prompt": "It is difficult for me to find the right words for my feelings.",
          "scale": "standard",
          "subscale": "difficulty-describing-feelings"
        },
        {
          "number": 3,
          "prompt": "I have physical sensations that even doctors don’t understand.",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 4,
          "prompt": "I am able to describe my feelings easily.",
          "scale": "inverted",
          "subscale": "difficulty-describing-feelings"
        },
        {
          "number": 5,
          "prompt": "I prefer to analyze problems rather than just describe them.",
          "scale": "inverted",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 6,
          "prompt": "When I am upset. I don’t know if I am sad, frightened, or angry. ",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 7,
          "prompt": "I am often puzzled by sensations in my body.",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 8,
          "prompt": "I prefer to just let things happen rather than to understand why they turned out that way.",
          "scale": "standard",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 9,
          "prompt": "I have feelings that I can’t quite identify.",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 10,
          "prompt": "Being in touch with emotions is essential.",
          "scale": "inverted",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 11,
          "prompt": "I find it hard to describe how I feel about people.",
          "scale": "standard",
          "subscale": "difficulty-describing-feelings"
        },
        {
          "number": 12,
          "prompt": "People tell me to describe my feelings more.",
          "scale": "standard",
          "subscale": "difficulty-describing-feelings"
        },
        {
          "number": 13,
          "prompt": "I don’t know what’s going on inside me.",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 14,
          "prompt": "I often don’t know why I am angry.",
          "scale": "standard",
          "subscale": "difficulty-identifying-feelings"
        },
        {
          "number": 15,
          "prompt": "I prefer talking to people about their daily activities rather than their feelings.",
          "scale": "standard",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 16,
          "prompt": "I prefer to watch “light” entertainment shows rather than psychological dramas.",
          "scale": "standard",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 17,
          "prompt": "It is difficult for me to reveal my innermost feelings. even to close friends.",
          "scale": "standard",
          "subscale": "difficulty-describing-feelings"
        },
        {
          "number": 18,
          "prompt": "I can feel close to someone, even in moments of silence.",
          "scale": "inverted",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 19,
          "prompt": "I find examination of my feelings useful in solving personal problems.",
          "scale": "inverted",
          "subscale": "externally-oriented-thinking"
        },
        {
          "number": 20,
          "prompt": "I look for hidden meanings in movies or plays.",
          "scale": "standard",
          "subscale": "externally-oriented-thinking"
        }
      ]
    }
  }
}
